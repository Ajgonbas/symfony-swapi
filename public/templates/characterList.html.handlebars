{{#each charList}}
    <a class="list-group-item list-group-item-action character" data-toggle="collapse" data-target="#charDetail-{{@key}}" data-id="{{@key}}" href="#" role="button" aria-expanded="false" aria-controls="charDetail-{{@key}}">
        {{this}}
    </a>
    <div class="collapse" id="charDetail-{{@key}}">
        <div class="card card-body">
            <div class="d-flex justify-content-center">
                <div class="spinner-border loading" role="status"><span class="sr-only">Loading...</span></div>
            </div>
        </div>
    </div>
{{/each}}
<div class="row">
    <div class="col-sm-6 text-center">
        {{#if previous}}
            <a href="#" data-page="{{ previous }}" class="badge badge-info pageSelector">Previous </a>
        {{/if}}
    </div>
    <div class="col-sm-6 text-center">
        {{#if next}}
            <a href="#" data-page="{{ next }}" class="badge badge-info pageSelector">Next</a>
        {{/if}}
    </div>
</div>